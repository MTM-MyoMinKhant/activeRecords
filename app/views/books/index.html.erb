<h1 class="header">Book Lists</h1>
<a href="/authors/<%= @author_id %>/books/new" class="btn right">Create new Book</a>
<a href="/authors" class="btn right">Authors List</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Author Name</th>
            <th scope="col">Name</th>
            <th scope="col">Volume</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <th scope="row"><%= book.id %></th>
                <td><%= book.author.name %></td>
                <td><%= book.name %></td>
                <td><%= book.volume %></td>
                <td><%= book.price %></td>
                <td>
                    <%= link_to "Edit", edit_author_book_path(book.author , book) , class: "r-link left" %>
                    <%= button_to 'Delete', author_book_path(book.author, book),
                    method: :delete, data: { confirm: 'Are you sure you want to delete this author?'},
                    class: 'btn' %>
                </td>
            <tr>
        <% end %>
    </tbody>
</table>
